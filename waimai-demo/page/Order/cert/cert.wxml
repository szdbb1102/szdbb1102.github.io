<view class="order-wrap">
    <scroll-view class="scroll-wrap" scroll-y="true">
        <view class="weui-cells weui-cells_after-title">
            <navigator url="../../person/adress/adress" class="weui-cell weui-cell_access"
                       hover-class="weui-cell_active">
                <view class="weui-cell__bd">{{morenShouHuo?morenShouHuo.floor+'楼'+morenShouHuo.room:'选择送货地址'}}</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
        </view>
        <view class="weui-cells__title">配送方式(自取点：时代广场一楼)</view>
        <view class="weui-cells weui-cells_after-title">
            <radio-group bindchange="radioChange">
                <label class="weui-cell weui-check__label" wx:for="{{radioItems}}" wx:key="value">
                    <radio class="weui-check" value="{{item.value}}" checked="{{item.checked}}"/>

                    <view class="weui-cell__bd">{{item.name}}</view>
                    <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
                        <icon class="weui-icon-radio" type="success_no_circle" size="16"></icon>
                    </view>
                </label>
            </radio-group>
        </view>
        <view class="weui-cells__title">配送时间</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__hd">
                    <image src="{{icon}}"
                           style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <picker  mode="time" value="{{time}}" start="{{receiveTime.start}}" end="{{receiveTime.end}}" bindchange="bindTimeChange">
                    <view class="weui-cell__bd">
                      当前选择: {{time}}
                    </view>
                </picker>
                <view class="weui-cell__ft">大约11：30送达</view>
            </view>
        </view>
        <view class="weui-cells weui-cells_after-title" wx:if='{{youhui.length>0}}'>
            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">选择优惠方式</view>
                </view>
                <view class="weui-cell__bd">
                    <picker bindchange="bindCountryChange" value="{{youhuiIndex}}" range="{{youhui}}">
                        <view class="weui-select weui-select_in-select-after">{{youhui[youhuiIndex]}}</view>
                    </picker>
                </view>
            </view>
        </view>
        <view class="weui-cells__title">备注</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="请输入备注"/>
                </view>
            </view>
        </view>
        <view class="weui-cells__title">饭小弟</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell" wx:for="{{tobook.detail}}">
                <view class="weui-cell__bd">{{item.name}}</view>
                <view class="weui-cell__ft">¥{{item.price}}x{{item.count}}</view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">配送费</view>
                <view class="weui-cell__ft">{{postFee}}</view>
            </view>
        </view>
    </scroll-view>
</view>
<view class="tp-fix">
    <view class="weui-form-preview__ft ">
        <view class="weui-form-preview__btn weui-form-preview__btn_default" hover-class="weui-form-preview__btn_active">
            待支付{{tobook.total.money}}¥
        </view>
        <view class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active"
              bindtap="toOrder">提交订单
        </view>
    </view>
</view>
        
