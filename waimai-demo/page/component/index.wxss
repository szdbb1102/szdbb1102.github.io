/*底部浮动*/
.cart-tab-wrp{
  height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction:row;
  width: 100%;
  z-index: 10;
  color: black
}
.cart-item-total{
  padding-left: 30rpx;
}
.cart-item-icon-wrp{
  width: 110rpx;
  height: 90rpx;
  position: absolute;
  top:-4rpx;
}
.cart-item-icon{
  width: 90rpx;
  height: 90rpx;

}
.cart-item-total-num{
    display: inline-block;
    width: 36rpx;
    height: 36rpx;
    font-size: 22rpx;
    color: white;
    line-height: 36rpx;
    border-radius: 36rpx;
    text-align: center;
    position: absolute;
    right: 2rpx;
}
.cart-item-total-price{
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    font-size: 36rpx;
    color: #F76260;
    line-height: 100rpx;
    text-align: center;
    padding-left: 110rpx;
}
.cart-tab-item-btn{
  width:240rpx;
  display:block;
  height:100rpx;
  line-height:100rpx;
  font-size:29rpx;
  background:#3c6;
  color:#fff;
  float:right;
  text-align:center;
}
.cart-tab-item{
  width: 375rpx;
}
/*菜单wrap*/
.menu-wrp{
  overflow:hidden;
  width:750rpx;
  height: 1000rpx;
  display:flex;
  background-color:white;
  flex-direction:row;
}

/*左侧菜单*/
.menu-item-wrp{
  text-align: center
}
.menu-item{
  width: 200rpx;
  height: 200rpx;
  color: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
}
.m-item-icon{
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  border-radius: 50%
}
.m-item-title{
  font-size: 24rpx;
  color: black
}
.left-side{
  height: 1000rpx;
  padding-bottom: 88rpx;
  display:flex;
  width: 200rpx;
  background-color: #FFFFFF;
  flex-direction:column;
}
/*右侧菜品*/
.dish-category-title{
  font-size: 28rpx;
  color: #888;
  border-bottom:2rpx solid #ccc;
  padding: 20rpx 0;
  margin-bottom: 6rpx;
}
.right-side{
  width: 100%;
  height: 1000rpx;
  color: #FFFFFF;
  justify-content: center;
  align-items: center;
}
.menu-footer{
  height: 100rpx;
}
